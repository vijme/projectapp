<h1>Listing registers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>lname</th>
      <th>Hospitalid</th>
      <th>Email</th>
      <th>Password</th>
      <th>Birthdate</th>
      <th>Gender</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registers.each do |register| %>
      <tr>
        <td><%= register.name %></td>
        <td><%= register.lname %></td>
        <td><%= register.hospitalID %></td>
        <td><%= register.email %></td>
        <td><%= register.password %></td>
        <td><%= register.dateofbirth %></td>
        <td><%= register.gender %></td>
        <td><%= link_to 'Show', register %></td>
        <td><%= link_to 'Edit', edit_register_path(register) %></td>
        <td><%= link_to 'Destroy', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

